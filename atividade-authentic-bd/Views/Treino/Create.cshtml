@model Treino

@{
    ViewBag.Title = "Cadastro de Treinos";
}

<h2>@ViewBag.Title</h2>


<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="AlunoID">Aluno</label>
        
        <select asp-for="AlunoID" asp-items="ViewBag.AlunoID" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="PersonalID">Personal</label>
        <select asp-for="PersonalID" asp-items="ViewBag.PersonalID" class="form-control"></select>
    </div>

    <div class="form-group">
        <label>Exercícios</label>
        <select name="exerciciosTreino" asp-items="ViewBag.Exercicios" class="form-control" multiple></select>
    </div>

    <div class="form-group">
        <label asp-for="Data" class="control-label"></label>
        <input asp-for="Data" asp-format="{0:dd/MM/yyyy}" type="date" class="form-control" />
        <span asp-validation-for="Data" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Hora" class="control-label"></label>
        <input asp-for="Hora" asp-format="{0:HH:mm}" type="time"  class="form-control" />
        <span asp-validation-for="Hora" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Criar" class="btn btn-primary" />
    </div>
</form>